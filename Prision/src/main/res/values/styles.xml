<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="common_head_blue_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/common_blue</item>
        <item name="chHead_title_padding_left">@dimen/common_head_leftImgPadding</item>
        <item name="chHead_titleColor">@android:color/white</item>
        <item name="chHead_leftImgPadding">10dip</item>
        <item name="chHead_rightImgPadding">10dip</item>
        <item name="chHead_title_size">@dimen/common_head_title_size</item>
        <item name="chHead_text_size">@dimen/common_head_text_size</item>
        <item name="chHead_textColor">@android:color/white</item>
        <item name="chHead_imgClickEffect">@drawable/common_head_blue_btn_selector</item>
        <item name="chHead_textClickEffect">@drawable/common_head_blue_btn_selector</item>

    </style>

    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
